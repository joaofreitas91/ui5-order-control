<mvc:View
    controllerName="com.lab2dev.ordercontrol.controller.OrderControl"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:web="sap.ui.webc.main"
    xmlns:chart="sap.suite.ui.microchart"
    xmlns:u="sap.ui.unified"
    displayBlock="true"
>
    <Page
        id="page"
        title=""
        showHeader="false"
        showFooter="true"
    >
        <VBox class="sapUiSmallMarginTopBottom">
            <Title
                text="Pedidos"
                level="H1"
                class="sapUiMediumMarginBeginEnd"
            />
            <HBox
                class="sapUiSmallMarginTopBottom"
                justifyContent="SpaceBetween"
            >
                <GenericTile
                    width="16rem"
                    class="tileLayout sapUiMediumMarginBeginEnd"
                    header="Total de Pedidos Diários"
                    subheader="Data: 14/03/2024"
                    pressEnabled="false"
                >
                    <TileContent>
                        <NumericContent
                            value="5"
                            valueColor="Good"
                            withMargin="false"
                            scale="UN"
                            indicator="Up"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    width="16rem"
                    class="tileLayout sapUiMediumMarginBeginEnd"
                    header="Total de Pedidos Diários"
                    subheader="Data: 14/03/2024"
                    pressEnabled="false"
                >
                    <TileContent>
                        <NumericContent
                            value="5"
                            valueColor="Good"
                            withMargin="false"
                            scale="UN"
                            indicator="Up"
                        />
                    </TileContent>
                </GenericTile>
                <GenericTile
                    width="16rem"
                    class="tileLayout sapUiMediumMarginBeginEnd"
                    header="Total de Pedidos Diários"
                    subheader="Data: 14/03/2024"
                    pressEnabled="false"
                >
                    <TileContent>
                        <NumericContent
                            value="5"
                            valueColor="Good"
                            withMargin="false"
                            scale="UN"
                            indicator="Up"
                        />
                    </TileContent>
                </GenericTile>

                <Panel
                    width="auto"
                    accessibleRole="Region"
                    class="sapUiMediumMarginBeginEnd"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Informações do usuário" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <content>
                        <FlexBox
                            alignItems="Center"
                            justifyContent="SpaceBetween"
                            backgroundDesign="Solid"
                            width="20rem"
                            class="sapUiTinyMarginTop"
                        >
                            <chart:InteractiveDonutChart
                                selectionChanged="onSelectionChanged"
                            >
                                <chart:segments>
                                    <chart:InteractiveDonutChartSegment
                                        label="Implementation Phase"
                                        value="40.0"
                                        displayedValue="40.0%"
                                    />
                                    <chart:InteractiveDonutChartSegment
                                        label="Design Phase"
                                        value="21.5"
                                        displayedValue="21.5%"
                                    />
                                    <chart:InteractiveDonutChartSegment
                                        label="Test Phase"
                                        value="38.5"
                                        displayedValue="38.5%"
                                    />
                                </chart:segments>
                            </chart:InteractiveDonutChart>
                        </FlexBox>
                    </content>
                </Panel>
            </HBox>
            <VBox class="sapUiMediumMarginBeginEnd">
                <Panel>
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="Informações do usuário" />
                        </OverflowToolbar>
                    </headerToolbar>
                    <content>
                        <HBox
                            alignItems="Center"
                            justifyContent="SpaceBetween"
                            width="60%"
                        >
                            <VBox
                                class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                            >
                                <Title
                                    level="H3"
                                    text="Name:"
                                />
                                <Text text="Citrosuco" />
                            </VBox>
                            <VBox
                                class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                            >
                                <Title
                                    level="H3"
                                    text="Endereço:"
                                />
                                <Text
                                    text="Av. Gov. Mário Covas Júnio, 68, Santos - SP, 11020-300"
                                />
                            </VBox>
                        </HBox>
                    </content>
                </Panel>
            </VBox>
        </VBox>
        <content>
            <t:Table
                id="tableOrders"
                rows="{orders>/}"
                rowActionCount="1"
                selectionMode="Single"
                selectionBehavior="RowOnly"
                class="sapUiMediumMarginBeginEnd"
            >
                <t:extension>
                    <OverflowToolbar>
                        <Title
                            id="title"
                            text="Pedidos"
                        />
                        <ToolbarSpacer />
                        <SearchField
                            width="12rem"
                            search=".onSearch"
                        />
                        <Button
                            icon="sap-icon://edit"
                            tooltip="Edit Item"
                            press="onEdit"
                        />
                        <Button
                            icon="sap-icon://copy"
                            tooltip="Copy Item"
                            press="onCopy"
                        />
                        <Button
                            icon="sap-icon://delete"
                            tooltip="Delete Item"
                            press="onDelete"
                        />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column>
                        <Label text="Pedido" />
                        <t:template>
                            <Text
                                text="{orders>ID}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Status" />
                        <t:template>
                            <web:Badge
                                text="{
                                    path: 'orders>status',
                                    formatter: '.formatter.textStatus'
                                }"
                                colorScheme="{
                                    path: 'orders>status',
                                    formatter: '.formatter.colorStatus'
                                }"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Data de Criação" />
                        <t:template>
                            <Text
                                text="{orders>createdAt}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Recebedor da Mercadoria" />
                        <t:template>
                            <Text
                                text="{orders>receiver}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Condição de Pagamento" />
                        <t:template>
                            <Text
                                text="{orders>payment_condition}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Valor" />
                        <t:template>
                            <ObjectNumber
                                number="{ path: 'orders>total_amount',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: {
                                    minFractionDigits: 2,
                                    maxFractionDigits: 2
                                }
                            }"
                                unit="BRL"
                            />
                        </t:template>
                    </t:Column>
                </t:columns>
                <t:rowActionTemplate>
                    <t:RowAction>
                        <t:RowActionItem
                            id="rowActionID"
                            icon="sap-icon://navigation-right-arrow"
                            press="handleNavDetail"
                        />
                    </t:RowAction>
                </t:rowActionTemplate>
            </t:Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Novo Pedido"
                    class="sapUiMediumMarginEnd"
                    type="Accept"
                    press="handleNavCreate"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
